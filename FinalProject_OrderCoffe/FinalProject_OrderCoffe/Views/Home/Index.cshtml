@section Scripts{
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#categorySelect').change(function () {
                var selectedCategory = $(this).val();
                $('.tab-pane').hide();
                $('#' + selectedCategory).show();
            });
        });
    </script>
}
