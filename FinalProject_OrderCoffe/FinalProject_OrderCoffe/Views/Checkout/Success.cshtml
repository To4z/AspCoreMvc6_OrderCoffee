@model FinalProject_OrderCoffe.ModelViews.MuaHangSuccess

@{
    ViewData["Title"] = "Thanh toán thành công";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="py-5 text-center">
        <i class="fas fa-check-circle text-success fa-4x"></i>
        <h2>Thanh toán thành công!</h2>
        <p class="lead">Cảm ơn quý khách đã thanh toán. Đơn hàng của quý khách đã được xác nhận.</p>
    </div>

    <div class="row">
        <div class="col-md-8 mx-auto">
            <h4 class="mb-3">Thông tin đơn hàng</h4>
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Thông tin người nhận</h5>
                            <p><strong>Họ và tên:</strong> @Model.FullName</p>
                            <p><strong>Số điện thoại:</strong> @Model.Phone</p>
                            <p><strong>Địa chỉ:</strong> @Model.Address, @Model.PhuongXa, @Model.QuanHuyen, @Model.TinhThanh</p>
                        </div>
                        <div class="col-md-6">
                            <h5>Thông tin đơn hàng</h5>
                            <p><strong>Mã đơn hàng:</strong> @Model.DonHangId</p>
                            <!-- Add other order details if available -->
                        </div>
                    </div>
                    <hr class="mb-4">
                    <p class="text-center">Hãy kiểm tra email để biết thông tin chi tiết về đơn hàng.</p>
                </div>
            </div>
        </div>
    </div>
</div>
