@model FinalProject_OrderCoffe.Models.Tintuc

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="card">
    <div class="card-header bg-primary text-white">
        <h1 class="m-3">Create</h1>
    </div>
    <div class="card-body">
        <h4 class="card-title">Create Product</h4>
        <p class="card-description">
            @ViewBag.Title
        </p>
        <form class="forms-sample" asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Title">Title</label>
                        <input type="text" class="form-control" asp-for="Title" placeholder="Product Name">
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Contents">Contents</label>
                        <input type="text" class="form-control" asp-for="Contents" placeholder="Contents">
                        <span asp-validation-for="Contents" class="text-danger"></span>

                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="CategoryId" class="control-label">Danh mục</label>
                        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.DanhMuc">
                            <option value="" disabled selected>Chọn danh mục</option>
                        </select>
                    </div>
                </div>
            </div>
           
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Thumb" class="control-label">Ảnh đại diện</label>
                        <div style="display: flex; align-items: center;">
                            <img id="thumbnail" src="~/images/images.png" alt="Thêm hình ảnh" style="max-height: 150px; max-width: 150px; object-fit: contain;" />
                            <input type="file" id="fileInput" name="fThumb" asp-for="Thumb" style="display: none;" accept="image/*" />
                        </div>
                        <span asp-validation-for="Thumb" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <p class="mb-2">Published</p>
                    <label class="toggle-switch toggle-switch-dark">
                        <input type="checkbox" asp-for="Published">
                        <span class="toggle-slider round" asp-validation-for="Published"></span>
                    </label>
                </div>
                <div class="col-md-3">
                    <p class="mb-2">IsHot</p>
                    <label class="toggle-switch toggle-switch-dark">
                        <input type="checkbox" asp-for="IsHot">
                        <span class="toggle-slider round" asp-validation-for="IsHot"></span>
                    </label>
                </div>
                <div class="col-md-3">
                    <p class="mb-2">IsNewFeed</p>
                    <label class="toggle-switch toggle-switch-dark">
                        <input type="checkbox" asp-for="IsNewFeed">
                        <span class="toggle-slider round" asp-validation-for="IsNewFeed"></span>
                    </label>
                </div>

            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group text-right">
                        <button type="submit" class="btn btn-primary">Create</button>
                        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <script>
        var thumbnail = document.getElementById("thumbnail");
        var fileInput = document.getElementById("fileInput");

        thumbnail.addEventListener("click", function () {
            fileInput.click();
        });

        fileInput.addEventListener("change", function () {
            if (fileInput.files.length > 0) {
                var newImage = URL.createObjectURL(fileInput.files[0]);
                thumbnail.src = newImage;
            }
        });
    </script>
}

