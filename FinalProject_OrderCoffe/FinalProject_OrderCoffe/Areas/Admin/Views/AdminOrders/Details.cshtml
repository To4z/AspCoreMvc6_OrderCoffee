@model FinalProject_OrderCoffe.Models.Order

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    List<OrderDetail> Danhsachdonhang = ViewBag.DonHang;
}

<!-- Shoping Cart Section Begin -->
<section class="shoping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th class="shoping__product">Products</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Danhsachdonhang != null && Danhsachdonhang.Count > 0)
                            {
                                foreach (var item in Danhsachdonhang)
                                {
                                    <tr>
                                        <td class="shoping__cart__item">
                                            <img style="width: 100px; height: 100px;" src="~/images/products/@item.Product.Thumb" alt="">
                                            <h5>@item.Product.ProductName</h5>
                                        </td>
                                        <td class="shoping__cart__price">
                                            @item.Product.Price.Value.ToString("#,##0") VNĐ
                                        </td>
                                        <td class="shoping__cart__quantity">
                                            <div class="quantity">
                                                <div class="pro-qty">
                                                    <input class="cartItem" data-mahh="@item.Product.ProductId" data-dongia="@item.Product.Price" type="text" value="@item.Quantity">
                                                </div>
                                            </div>
                                        </td>
                                        <td class="shoping__cart__total">
                                            @item.Total VNĐ
                                        </td>
                                        <td class="shoping__cart__item__close">
                                            <input type="button" value="x" class="removecart btn btn-primary" data-mahh="@item.Product.ProductId" />
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
            <div class="col-lg-6">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group text-right">
                            <a class="btn btn-secondary" asp-action="Index">Back to List</a>
                        </div>
                    
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Shoping Cart Section End -->
