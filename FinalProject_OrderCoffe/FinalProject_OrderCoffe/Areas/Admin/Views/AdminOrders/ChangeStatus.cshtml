@model FinalProject_OrderCoffe.Models.Order

@{
    ViewData["Title"] = "ChangeStatus";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>ChangeStatus</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangeStatus">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
               
            <input type="hidden" asp-for="CustomerId" class="form-control" />
            <input type="hidden"  asp-for="OrderDate" class="form-control" />
            <input type="hidden" asp-for="Deleted" class="form-control" />
            <input type="hidden" asp-for="Paid" class="form-control" />
            <input type="hidden" asp-for="PaymentId" class="form-control" />
            <input type="hidden" asp-for="PaymentDate" class="form-control" />
            <input type="hidden" asp-for="Note" class="form-control" />
            <input type="hidden" asp-for="TotalMoney" class="form-control" />
            <input type="hidden" asp-for="OrderId" />
            <div class="form-group">
                <label asp-for="ShipDate" class="control-label"></label>
                <input asp-for="ShipDate" class="form-control" />
                <span asp-validation-for="ShipDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TranSacStatusId" class="control-label"></label>
                <select asp-for="TranSacStatusId" class="form-control" asp-items="ViewBag.TrangThai"></select>
                <span asp-validation-for="TranSacStatusId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

