@model FinalProject_OrderCoffe.Models.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header bg-primary text-white">
        <h1 class="m-3">Details</h1>
    </div>
    <div class="card-body">
        <div class="role-details">
            <h4>Acounts</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ProductName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ProductName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ShortDdesc)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ShortDdesc)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Descriptioon)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Descriptioon)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Price)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Discount)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Discount)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Thumb)
                </dt>
                <dd class="col-sm-10">
                    <img src="~/images/products/@Model.Thumb" alt="@Model.ProductName" style="max-height: 50px; max-width: 50px;" />
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Video)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Video)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DateCreate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DateCreate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DateModified)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DateModified)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.BestSellers)
                </dt>
                <dd class="col-sm-10">
                    <div class="col">
                        <label class="toggle-switch @(Model.BestSellers == true ? "toggle-switch-success" : "toggle-switch-danger")">
                            <input type="checkbox" disabled @(Model.BestSellers == true ? "checked" : "")>
                            <span class="toggle-slider round"></span>
                        </label>
                    </div>
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.HomeFlag)
                </dt>
                <dd class="col-sm-10">
                    <div class="col">
                        <label class="toggle-switch @(Model.HomeFlag == true ? "toggle-switch-success" : "toggle-switch-danger")">
                            <input type="checkbox" disabled @(Model.HomeFlag == true ? "checked" : "")>
                            <span class="toggle-slider round"></span>
                        </label>
                    </div>
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Active)
                </dt>
                <dd class="col-sm-10">
                    <div class="col">
                        <label class="toggle-switch @(Model.Active == true ? "toggle-switch-success" : "toggle-switch-danger")">
                            <input type="checkbox" disabled @(Model.Active == true ? "checked" : "")>
                            <span class="toggle-slider round"></span>
                        </label>
                    </div>
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Tags)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Tags)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Alias)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Alias)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.MetaDesc)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.MetaDesc)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.MetaKey)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.MetaKey)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.UnitslnStock)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.UnitslnStock)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Category)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Category.CardId)
                </dd>
            </dl>
        </div>
        <div class="card-actions">
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.ProductId">Edit</a>
            <a class="btn btn-secondary" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>